{
  "name": "native",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "dev": "expo start -c",
    "dev:tunnel": "expo start --clear --tunnel",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "prebuild": "expo prebuild",
    "web": "expo start --web",
    "update-version": "node scripts/update-version.js",
    "build:ios": "pnpm run update-version && npx eas-cli build --platform ios --profile production",
    "build:android": "pnpm run update-version && npx eas-cli build --platform android --profile production",
    "build:all": "pnpm run update-version && npx eas-cli build --platform all --profile production",
    "build:ios:local": "expo prebuild && expo run:ios --configuration Release",
    "build:android:local": "expo prebuild && expo run:android --variant release",
    "submit:ios": "npx eas-cli submit --platform ios --profile production",
    "submit:android": "npx eas-cli submit --platform android --profile production"
  },
  "dependencies": {
